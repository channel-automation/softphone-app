@{
    ViewBag.Title = "Developer Signup";
    Layout = "_Layout";
}

<div class="login-box mx-auto mt-5">
    <div class="card card-outline card-purple">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>Softphone</b></a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Developer Signup</p>
            <form onsubmit="return _signup(this)">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Workspace Name</label>
                    <input type="text" name="workspaceName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" name="firstName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" name="lastName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="username" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Twilio Account SID</label>
                    <input type="text" name="twilioAccountSid" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Twilio Auth Token</label>
                    <input type="text" name="twilioAuthToken" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Channel Automation API Key</label>
                    <input type="text" name="channelAutomationApiKey" class="form-control" required />
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <button type="submit" class="btn bg-gradient-purple btn-block">Sign Up</button>
                    </div>
                </div>
            </form>
            <p class="mt-3 mb-1">
                <a href="@Url.Action("Login")">Already have an account? Login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function _signup(form) {
            let data = $(form).serialize();
            $.post("@Url.Action("Signup")", data)
                .done(function (response) {
                    if (response && response.length > 0) {
                        toastr.error(response.join('<br/>'));
                    } else {
                        location.href = "@Url.Action("Index", "Home")";
                    }
                })
                .fail(function (xhr, status, error) {
                    console.error(xhr.responseText);
                    toastr.error("An error occurred: " + error);
                });
            return false;
        }
    </script>
}
